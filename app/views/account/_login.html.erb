<div id="login-form" class="mdl-shadow--4dp mdl-color--lime-300">
  <%= form_tag(signin_path) do %>
    <%= back_url_hidden_field_tag %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <label for="username"><%=l(:field_login)%>:</label>
      <%= text_field_tag 'username', params[:username], :tabindex => '1', class: 'mdl-textfield__input' %>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <label for="password"><%=l(:field_password)%>:</label>
      <%= password_field_tag 'password', nil, :tabindex => '2', class: 'mdl-textfield__input' %>
    </div>
    <% if Setting.openid? %>
      <label for="openid_url"><%=l(:field_identity_url)%></label>
      <%= text_field_tag "openid_url", nil, :tabindex => '3' %>
    <% end %>
    <% if Setting.autologin? %>
      <label for="autologin"><%= check_box_tag 'autologin', 1, false, :tabindex => 4 %> <%= l(:label_stay_logged_in) %></label>
    <% end %>
    <% if Setting.lost_password? %>
      <%= link_to l(:label_password_lost), lost_password_path, class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-color--lime-700' %>
    <% end %>
    <input class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-color--green-700" type="submit" name="login" value="<%=l(:button_login)%> &#187;" tabindex="5"/>
  <% end %>
</div>
